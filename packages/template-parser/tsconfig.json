{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist"],
}
